<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Assembly information -->
		<ApplicationIcon>ShelfScan.ico</ApplicationIcon>
		<Authors>Richard Lawrence</Authors>
		<Product>ShelfScan</Product>
		<Description>Scans a media library for Plex naming compliance.</Description>
		<PackageProjectUrl>https://github.com/mrsilver76/shelfscan</PackageProjectUrl>
		<RepositoryUrl>https://github.com/mrsilver76/shelfscan</RepositoryUrl>
		<Copyright>Copyright © 2025 Richard Lawrence</Copyright>
		
		<!-- Version information -->
		<!-- Remember major.minor.BUILD.revision! -->
		<Version>0.6.0.0</Version>
		<AssemblyVersion>0.6.0.0</AssemblyVersion>
		<FileVersion>0.6.0.0</FileVersion>
		<AnalysisLevel>latest-recommended</AnalysisLevel>
	</PropertyGroup>

</Project>
